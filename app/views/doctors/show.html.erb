<h1><%= @doctor.name %></h1>

<h2>Specialty: </h2> <h3><%= @doctor.specialty %></h3>


<h3>Patients:</h3>
<% Patient.all.each do | patient | %>
    <% if patient.ailment.name == @doctor.specialty %>
        <%= link_to patient.name, patient_path(patient) %><br>
    <% end %>
<% end %>
<br>
<br>
<%= button_to "Edit Doctor", {:controller => :doctors, :action => 'edit', :id => @doctor.id}, :method => :get %>
<br>
<br>
<%= button_to "Delete Doctor", {:controller => :doctors, :action => 'destroy', :id => @doctor.id}, :method => :delete %>

