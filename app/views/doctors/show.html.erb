<style>

body {
    text-align: center;
    background-image: url('https://motionarray.imgix.net/preview-145191-azfd2K96bO-high_0000.jpg?w=660&q=60&fit=max&auto=format');
    background-repeat: no-repeat;
    background-size: cover;
    padding-top: 40px;
}

div {
    display: fixed;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    overflow: hidden;
}

/* Add a black background color to the top navigation */
.topnav {
    width: 100%;
    opacity: 70%;
    background-color: #333;
    overflow: hidden;
}

/* Style the links inside the navigation bar */
.topnav a {
    float: left;
    position: relative;
    color: #f2f2f2;
    text-align: center;
    padding: 16px 24px;
    text-decoration: none;
    font-size: 20px;
}

.topnav a:last-child {
    float: right;
    margin-right: 25px;
}

/* Change the color of links on hover */
.topnav a:hover {
    background-color: #ddd;
    color: blue;
}

/* Add a color to the active/current link */
.topnav a.active {
    background-color: #4CAF50;
    color: purple;
}
