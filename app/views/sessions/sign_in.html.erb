<h1> Administrator Sign-In </h1>

<%= form_with model: @administrator, :url => url_for(:controller => 'sessions', :action => 'create') do | f | %>

    User Name<br> 
    <%= f.text_field :user_name %><br><br>

    Password<br> 
    <%= f.password_field :password %><br><br>

    <%= f.submit "Sign-In" %>

<% end %>
<br>
<h3> Don't have an Account? </h3>
<%= link_to "Create Account", new_administrator_path %>
<br>
<br>
<% flash.each do | key, v | %>
    <li style= 'color: red' > <%= v %></li>
<% end %>

<style>
    
    li {
        list-style-type: none;
    }

    body {
        text-align: center;
        background-image: url('https://motionarray.imgix.net/preview-145191-azfd2K96bO-high_0000.jpg?w=660&q=60&fit=max&auto=format');
        background-repeat: no-repeat;
        background-size: cover;
    }

</style>